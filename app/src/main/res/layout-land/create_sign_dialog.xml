<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_user_dialog_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="@dimen/dimen_630"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="签到查询"
                android:textColor="@color/icon_color"
                android:textSize="@dimen/dimen_40sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#FF909090" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_30"
            android:paddingLeft="@dimen/dimen_50"
            android:paddingRight="@dimen/dimen_50"
            android:paddingTop="@dimen/dimen_30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dimen_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="制单人"
                    android:textColor="@color/icon_color"
                    android:textSize="@dimen/dimen_40sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    "
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_40sp" />
                <com.daoran.newfactory.onefactory.view.edit.EditTextWithDelete
                    android:id="@+id/etAudit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_50"
                    android:background="@drawable/shape_edittext_sql_boild"
                    android:gravity="center"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textColor="@color/icon_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起始日期"
                    android:textColor="@color/icon_color"
                    android:textSize="@dimen/dimen_40sp" />

                <TextView
                    android:id="@+id/tvInitialDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70"
                    android:layout_marginLeft="@dimen/dimen_50"
                    android:background="@drawable/shape_text_sql_boild"
                    android:gravity="center"
                    android:textColor="@color/icon_color"
                    android:textSize="@dimen/dimen_40sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束日期"
                    android:textColor="@color/icon_color"
                    android:textSize="@dimen/dimen_40sp" />

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70"
                    android:layout_marginLeft="@dimen/dimen_50"
                    android:background="@drawable/shape_text_sql_boild"
                    android:gravity="center"
                    android:textColor="@color/icon_color"
                    android:textSize="@dimen/dimen_40sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#FF909090" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingLeft="@dimen/dimen_70"
            android:paddingRight="@dimen/dimen_70"
            android:paddingTop="@dimen/dimen_20">

            <Button
                android:id="@+id/btnCancle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_70"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_sql_boild"
                android:text="取消"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnComfirm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_70"
                android:layout_marginLeft="@dimen/dimen_200"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_sql_boild"
                android:text="确定"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>