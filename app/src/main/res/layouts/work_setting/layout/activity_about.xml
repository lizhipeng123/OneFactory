<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150"
        android:layout_gravity="center"
        android:background="@color/lightblue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:src="@mipmap/ali_back_two" />

        <View
            android:id="@+id/viewtitle"
            android:layout_width="1px"
            android:layout_height="@dimen/dimen_100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_toRightOf="@+id/ivBack"
            android:background="#FF909090" />

        <TextView
            android:id="@+id/tvTbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_toRightOf="@+id/viewtitle"
            android:gravity="center"
            android:text="关于DFAPP"
            android:textColor="@color/icon_color"
            android:textSize="@dimen/dimen_55sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAbout"
                android:layout_width="@dimen/dimen_300"
                android:layout_height="@dimen/dimen_300" />

            <TextView
                android:id="@+id/tvCoreAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_30"
                android:gravity="center"
                android:textSize="@dimen/dimen_55sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>