<?xml version="1.0" encoding="utf-8"?>
<com.daoran.newfactory.onefactory.view.weight.InputMethodRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/login_logo_layout_v"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_login"
                            android:layout_width="@dimen/dimen_300"
                            android:layout_height="@dimen/dimen_300"
                            android:scaleType="fitXY" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/login_logo_layout_h"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dip"
                        android:gravity="left|center"
                        android:layout_marginLeft="@dimen/dimen_100"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/image_login_h"
                            android:layout_width="@dimen/dimen_150"
                            android:layout_height="42.0dip"
                            android:adjustViewBounds="true"
                            android:gravity="center" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_70sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/dimen_20"
                            android:text="@string/app_name"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_title_image"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dimen_40">

                        <TextView
                            android:id="@+id/text_notuse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                        <com.daoran.newfactory.onefactory.view.edit.EditTextWithDelete
                            android:id="@+id/Login_txt_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_100"
                            android:layout_marginRight="@dimen/dimen_100"
                            android:background="@drawable/shape_edittext_sql_boild"
                            android:gravity="center|left"
                            android:hint="@string/loginusername"
                            android:maxLength="10"
                            android:paddingBottom="@dimen/dimen_30"
                            android:paddingLeft="@dimen/dimen_42"
                            android:paddingRight="@dimen/dimen_42"
                            android:paddingTop="@dimen/dimen_30"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/defaultTextColor"
                            android:textSize="@dimen/dimen_50sp" />

                        <com.daoran.newfactory.onefactory.view.edit.EditTextWithDelete
                            android:id="@+id/Login_txt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_100"
                            android:layout_marginRight="@dimen/dimen_100"
                            android:layout_marginTop="@dimen/dimen_42"
                            android:background="@drawable/shape_edittext_sql_boild"
                            android:gravity="center|left"
                            android:hint="@string/loginpassword"
                            android:maxLength="20"
                            android:paddingBottom="@dimen/dimen_30"
                            android:paddingLeft="@dimen/dimen_42"
                            android:paddingRight="@dimen/dimen_42"
                            android:paddingTop="@dimen/dimen_30"
                            android:password="true"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/defaultTextColor"
                            android:textSize="@dimen/dimen_50sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_42"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_100"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/Login_chk_password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/chk_agee_provision_background"
                                    android:button="@null" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/rememberpassword"
                                    android:textColor="@color/defaultTextColor"
                                    android:textSize="@dimen/dimen_40sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dimen_100"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/Login_chk_aotulogin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/chk_agee_provision_background"
                                    android:button="@null" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/openlogin"
                                    android:textColor="@color/defaultTextColor"
                                    android:textSize="@dimen/dimen_40sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <Button
                            android:id="@+id/Login_div_loginbutton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_100"
                            android:layout_marginRight="@dimen/dimen_100"
                            android:layout_marginTop="@dimen/dimen_60"
                            android:background="@drawable/shape_btn_sql_boild"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_60sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dimen_60"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textColor="@color/color_circle_border" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</com.daoran.newfactory.onefactory.view.weight.InputMethodRelativeLayout>