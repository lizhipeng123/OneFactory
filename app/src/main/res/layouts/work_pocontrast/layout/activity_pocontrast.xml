<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50.00dp"
            android:background="@color/lightblue">
            <ImageView
                android:id="@+id/ivPoContrast"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:layout_marginLeft="@dimen/dimen_20"
                android:src="@mipmap/ali_back_two"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <View
                android:id="@+id/viewtitletwo"
                android:layout_width="1px"
                android:layout_height="@dimen/dimen_100"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_toRightOf="@+id/ivPoContrast"
                android:background="#FF909090" />
            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="@dimen/dimen_70"
                android:layout_height="@dimen/dimen_70"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_toRightOf="@+id/viewtitletwo"
                android:src="@mipmap/ali_search_two" />
            <TextView
                android:id="@+id/tvPoContrastTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="生产单物料审核表"
                android:textColor="@color/icon_color"
                android:textSize="@dimen/dimen_55sp" />
            <View
                android:id="@+id/viewtitle"
                android:layout_width="1px"
                android:layout_height="@dimen/dimen_100"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_toLeftOf="@+id/spinnermenu"
                android:background="#FF909090" />

            <Button
                android:id="@+id/spinnermenu"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_80"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:background="@mipmap/spin_filp" />
        </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#FF909090" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lightblue"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="负责人审核" />
            <View
                android:layout_width="1px"
                android:layout_height="50dp"
                android:background="@color/darkgray"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="供应链管理审核" />
            <View
                android:layout_width="1px"
                android:layout_height="50dp"
                android:background="@color/darkgray" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="运营官审核" />
            <View
                android:layout_width="1px"
                android:layout_height="50dp"
                android:background="@color/darkgray" />
            <TextView
                android:id="@+id/tv_item"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="款号" />
            <View
                android:layout_width="1px"
                android:layout_height="50dp"
                android:background="@color/darkgray" />
            <TextView
                android:id="@+id/tv_mtr"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="物料名称" />

        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="50dp"
            android:background="@color/darkgray" />
        <LinearLayout
            android:id="@+id/lin_header_content"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <com.daoran.newfactory.onefactory.view.listview.SyncHorizontalScrollView
                android:id="@+id/header_horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/lin_year_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="颜色" />
                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="物料状态" />
                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="投料米数" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="投料单价" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="加工单价" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="采购单价" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="利润百分比" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="采购加工单价" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="折算说明" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="备注" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="投料日期" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="离厂日期" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="交期" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="外贸业务员" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="采购员" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="供应商名称" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="门幅CM" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="规格" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="详细规格" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="成分" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="克重" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="厚度/类型" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="部位" />
                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />
                </LinearLayout>
            </com.daoran.newfactory.onefactory.view.listview.SyncHorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FF909090" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_visibi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/lightblue"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/null_comm_img" />

            <TextView
                android:id="@+id/tv_visibi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
        <ScrollView
            android:id="@+id/scroll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <com.daoran.newfactory.onefactory.view.listview.NoscrollListView
                    android:id="@+id/lv_cleft"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#cccccc" />

                <LinearLayout
                    android:id="@+id/lin_data_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <com.daoran.newfactory.onefactory.view.listview.SyncHorizontalScrollView
                        android:id="@+id/data_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:scrollbars="none">

                        <com.daoran.newfactory.onefactory.view.listview.NoscrollListView
                            android:id="@+id/lv_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never"
                            android:scrollbars="none" />
                    </com.daoran.newfactory.onefactory.view.listview.SyncHorizontalScrollView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@color/lightblue"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivUpLeftPage"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:src="@mipmap/left49" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etSqlDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_90"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_edittext_sql_boild"
                    android:gravity="center"
                    android:inputType="phone|number"
                    android:numeric="integer"
                    android:paddingLeft="15dp"
                    android:textColor="@color/icon_color"
                    android:paddingRight="15dp"
                    android:text="1"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="/"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvSignPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnSignPage"
                    android:layout_width="@dimen/dimen_170"
                    android:layout_height="@dimen/dimen_100"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:textColor="@color/icon_color"
                    android:background="@drawable/shape_btn_newsbuild_boild"
                    android:text="确定" />

                <Spinner
                    android:id="@+id/spinnCommoPageClumns"
                    android:layout_width="@dimen/dimen_150"
                    android:layout_height="@dimen/dimen_100"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:background="@drawable/spinner_bg"
                    android:entries="@array/clumnsCommon"
                    android:gravity="center_vertical"
                    android:text="每页10行"
                    android:textSize="@dimen/dimen_50sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:gravity="center"
                    android:text="条"
                    android:textColor="@color/icon_color"
                    android:textSize="@dimen/dimen_50sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivDownRightPage"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_20"
                android:rotation="180"
                android:src="@mipmap/left49" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>