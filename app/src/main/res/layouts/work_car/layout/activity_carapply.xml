<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightblue"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:src="@mipmap/ali_back_two" />
        <View
            android:id="@+id/viewtitle"
            android:layout_width="1px"
            android:layout_height="@dimen/dimen_100"
            android:layout_toRightOf="@+id/ivBack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_50"
            android:background="#FF909090"/>
        <TextView
            android:id="@+id/tvTbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/viewtitle"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_50"
            android:text="出车单详情"
            android:textColor="@color/icon_color"
            android:textSize="@dimen/dimen_55sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#FF909090" />

    <ScrollView
        android:id="@+id/svcontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20"
                android:background="@drawable/shape_ll_boild"
                android:orientation="vertical"
                android:padding="@dimen/dimen_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="编号："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />

                        <TextView
                            android:id="@+id/tvCarcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="170324004"
                            android:textColor="@color/grey_btn_stroke_color_pressed"
                            android:textSize="@dimen/dimen_50sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="申请人："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />

                        <TextView
                            android:id="@+id/tvCarrecorder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="zhangsan"
                            android:textColor="@color/grey_btn_stroke_color_pressed"
                            android:textSize="@dimen/dimen_50sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地点："
                        android:textColor="@color/icon_color"
                        android:textSize="@dimen/dimen_58sp" />

                    <TextView
                        android:id="@+id/tvCarroad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="绍兴"
                        android:textColor="@color/grey_btn_stroke_color_pressed"
                        android:textSize="@dimen/dimen_50sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申请日期："
                        android:textColor="@color/icon_color"
                        android:textSize="@dimen/dimen_58sp" />

                    <TextView
                        android:id="@+id/tvCarrecordt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-03-24 15:13:02"
                        android:textColor="@color/grey_btn_stroke_color_pressed"
                        android:textSize="@dimen/dimen_50sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="事由："
                        android:textColor="@color/icon_color"
                        android:textSize="@dimen/dimen_58sp" />

                    <TextView
                        android:id="@+id/tvCarreason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="面料"
                        android:textColor="@color/grey_btn_stroke_color_pressed"
                        android:textSize="@dimen/dimen_50sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计出车时间"
                        android:textColor="@color/icon_color"
                        android:textSize="@dimen/dimen_58sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCardepartureBdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimen_20"
                            android:text="2017/03/24 15:13"
                            android:textColor="@color/grey_btn_stroke_color_pressed"
                            android:textSize="@dimen/dimen_50sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="至"
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_50sp" />

                        <TextView
                            android:id="@+id/tvCardepartureEdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017/03/24 15:13"
                            android:textColor="@color/grey_btn_stroke_color_pressed"
                            android:textSize="@dimen/dimen_50sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_20"
                android:paddingLeft="@dimen/dimen_20"
                android:paddingRight="@dimen/dimen_20"
                android:text="以下由司机根据实际情况填写："
                android:textColor="@color/icon_color"
                android:textSize="@dimen/dimen_63sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20"
                android:background="@drawable/shape_ll_boild"
                android:orientation="vertical"
                android:padding="@dimen/dimen_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="司机："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />

                        <Spinner
                            android:id="@+id/spinnerdriver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车牌："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_60sp" />

                        <Spinner
                            android:id="@+id/spinnerNumberBind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出发公里数："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsteelblue"
                            android:focusableInTouchMode="false"
                            android:textSize="@dimen/dimen_58sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结束公里数："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_60sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsteelblue"
                            android:focusableInTouchMode="false"
                            android:textSize="@dimen/dimen_58sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本次公里数："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsteelblue"
                            android:focusableInTouchMode="false"
                            android:textSize="@dimen/dimen_58sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="等待时间："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_60sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsteelblue"
                            android:focusableInTouchMode="false"
                            android:textSize="@dimen/dimen_58sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="过路费："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsteelblue"
                            android:focusableInTouchMode="false"
                            android:textSize="@dimen/dimen_58sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsteelblue"
                            android:focusableInTouchMode="false"
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实际出车时间："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />

                        <EditText
                            android:id="@+id/etStartDataClick"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsteelblue"
                            android:focusableInTouchMode="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="至"
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_60sp" />

                        <EditText
                            android:id="@+id/etEndDataClick"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsteelblue"
                            android:focusableInTouchMode="false" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="其他："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsteelblue"
                            android:focusableInTouchMode="false"
                            android:textSize="@dimen/dimen_58sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否长途："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="false"
                            android:checked="false"
                            android:focusable="false"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备注："
                            android:textColor="@color/icon_color"
                            android:textSize="@dimen/dimen_58sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightsteelblue"
                            android:focusableInTouchMode="false"
                            android:textSize="@dimen/dimen_58sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#FF909090" />
    <LinearLayout
        android:id="@+id/llButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_20"
        android:paddingBottom="@dimen/dimen_20"
        android:paddingLeft="@dimen/dimen_70"
        android:paddingRight="@dimen/dimen_70"
        android:background="@color/lightblue"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_90"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn_sql_boild"
            android:layout_weight="1"
            android:text="@android:string/no" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_90"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dimen_250"
            android:background="@drawable/shape_btn_sql_boild"
            android:layout_weight="1"
            android:text="保存" />
    </LinearLayout>
</LinearLayout>