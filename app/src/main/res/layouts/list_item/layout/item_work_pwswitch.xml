<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_pwswitch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/lightblue"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_180">
        <ImageView
            android:id="@+id/image_pwswitch"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_centerVertical="true"
            android:src="@mipmap/default_touxiang" />

        <TextView
            android:id="@+id/tvWorkPwswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_60"
            android:gravity="center"
            android:layout_toRightOf="@+id/image_pwswitch"
            android:paddingBottom="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_30"
            android:text="1"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_45sp" />

        <ImageView
            android:id="@+id/image_check_pwswitch"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_40"
            android:visibility="visible"
            android:src="@mipmap/check_light" />
    </RelativeLayout>
</RelativeLayout>