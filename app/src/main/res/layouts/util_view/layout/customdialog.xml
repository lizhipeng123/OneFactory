<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="@dimen/dimen_960"
        android:layout_height="@dimen/dimen_529"
        android:background="@drawable/customdialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70"
            android:layout_marginTop="@dimen/dimen_141"
            android:gravity="center"
            android:text="he"
            android:textColor="#656565"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_141"
            android:gravity="top|center"
            android:layout_marginLeft="@dimen/dimen_45"
            android:layout_marginRight="@dimen/dimen_45"
            android:orientation="horizontal">

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dimen_138"
                android:background="@drawable/gray_bg"
                android:text="@android:string/yes"
                android:textColor="#696969"
                android:textSize="18sp" />

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dimen_138"
                android:layout_marginLeft="@dimen/dimen_30"
                android:background="@drawable/login_red_btn_selector"
                android:text="@android:string/no"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
