<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_user_dialog_view"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="日报表查询"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_55sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FF909090" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_30"
                android:paddingLeft="@dimen/dimen_70"
                android:paddingRight="@dimen/dimen_70"
                android:paddingTop="@dimen/dimen_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="款号"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    "
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />

                    <com.daoran.newfactory.onefactory.view.edit.EditTextWithDelete
                        android:id="@+id/etprodialogStyle"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_50"
                        android:background="@drawable/shape_edittext_sql_boild"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工序"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    "
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />

                    <Spinner
                        android:id="@+id/tvprodialogProcedure"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_marginLeft="@dimen/dimen_50"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:textSize="@dimen/dimen_50sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工厂"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    "
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />

                    <com.daoran.newfactory.onefactory.view.edit.EditTextWithDelete
                        android:id="@+id/etprodialogFactory"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_100"
                        android:layout_marginLeft="@dimen/dimen_50"
                        android:background="@drawable/shape_edittext_sql_boild"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="制单人"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />

                    <com.daoran.newfactory.onefactory.view.edit.EditTextWithDelete
                        android:id="@+id/etprodialogRecode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_100"
                        android:layout_marginLeft="@dimen/dimen_50"
                        android:background="@drawable/shape_edittext_sql_boild"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkboxNull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/chk_agee_provision_background"
                        android:button="@null" />

                    <TextView
                        android:id="@+id/tvProDialogcheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="是否可空"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_50sp" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FF909090" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_30"
                android:paddingLeft="@dimen/dimen_70"
                android:paddingRight="@dimen/dimen_70"
                android:paddingTop="@dimen/dimen_30">

                <Button
                    android:id="@+id/btnCancle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_90"
                    android:layout_weight="1"
                    android:background="@drawable/shape_btn_sql_boild"
                    android:text="@android:string/no"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnComfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_90"
                    android:layout_marginLeft="@dimen/dimen_200"
                    android:layout_weight="1"
                    android:background="@drawable/shape_btn_sql_boild"
                    android:text="@android:string/yes"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>