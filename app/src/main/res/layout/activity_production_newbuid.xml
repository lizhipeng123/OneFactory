<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150"
        android:background="@color/lightblue">

        <ImageView
            android:id="@+id/ivProductionBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_back" />

        <View
            android:id="@+id/viewtitletwo"
            android:layout_width="1px"
            android:layout_height="@dimen/dimen_100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_toRightOf="@+id/ivProductionBack"
            android:background="#FF909090" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_toRightOf="@+id/viewtitletwo"
            android:text="款号选择"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_55sp" />

        <Button
            android:id="@+id/btnNewbuildConfirm"
            android:layout_width="@dimen/dimen_170"
            android:layout_height="@dimen/dimen_90"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_btn_newsbuild_boild"
            android:text="确定"
            android:textSize="@dimen/dimen_40sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/darkgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/lightblue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_20">

        <TextView
            android:id="@+id/spinnerNewbuild"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:background="@drawable/spinner_bg"
            android:gravity="center"
            android:text="选择工序"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_50sp" />

        <com.daoran.newfactory.onefactory.view.EditTextWithDelete
            android:id="@+id/etNewbuild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:background="@drawable/shape_edittext_sql_boild"
            android:hint="请输入款号"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingLeft="@dimen/dimen_42"
            android:paddingRight="@dimen/dimen_42"
            android:paddingTop="@dimen/dimen_20"
            android:textColorHint="@color/defaultTextColor"
            android:textSize="@dimen/dimen_50sp" />

        <Button
            android:id="@+id/etNewbuildSql"
            android:layout_width="@dimen/dimen_170"
            android:layout_height="@dimen/dimen_90"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:background="@drawable/shape_btn_newsbuild_boild"
            android:gravity="center"
            android:text="查找"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_40sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/darkgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lightblue"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="款号"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_45sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="50dp"
            android:background="#cccccc" />

        <LinearLayout
            android:id="@+id/lin_header_content"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <com.daoran.newfactory.onefactory.view.listview.SyncHorizontalScrollView
                android:id="@+id/header_horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/lin_year_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <!--<TextView-->
                        <!--android:id="@+id/tv_data"-->
                        <!--android:layout_width="120dp"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:gravity="center"-->
                        <!--android:text="款号"-->
                        <!--android:textColor="@color/black"-->
                        <!--android:textSize="@dimen/dimen_45sp" />-->

                    <!--<View-->
                        <!--android:layout_width="1px"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:background="@color/darkgray" />-->

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="跟单"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="工厂"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="部门/组别"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="工序"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="组别人数"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="制单数"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="任务数"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="尺码"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="花色"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="实裁数"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="总完工数"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="状态"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_45sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/darkgray" />

                </LinearLayout>
            </com.daoran.newfactory.onefactory.view.listview.SyncHorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_visibi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/null_comm_img" />

            <TextView
                android:id="@+id/tv_visibi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text=""
                android:textColor="#FFCBCBCB"
                android:textSize="15sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <com.daoran.newfactory.onefactory.view.listview.NoscrollListView
                    android:id="@+id/lv_pleft"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#cccccc" />

                <LinearLayout
                    android:id="@+id/lin_data_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.daoran.newfactory.onefactory.view.listview.SyncHorizontalScrollView
                        android:id="@+id/data_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:scrollbars="none">

                        <com.daoran.newfactory.onefactory.view.listview.NoscrollListView
                            android:id="@+id/lv_newbuild_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never"
                            android:scrollbars="none" />
                    </com.daoran.newfactory.onefactory.view.listview.SyncHorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@color/lightblue"
            android:gravity="center">

            <EditText
                android:id="@+id/etNewbuildDetail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_90"
                android:layout_gravity="center"
                android:background="@drawable/shape_edittext_sql_boild"
                android:inputType="phone|number"
                android:numeric="integer"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="/"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvNewbuildPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:textSize="@dimen/dimen_50sp" />

            <Button
                android:id="@+id/btnNewbuildPage"
                android:layout_width="@dimen/dimen_170"
                android:layout_height="@dimen/dimen_100"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_30"
                android:background="@drawable/shape_btn_newsbuild_boild"
                android:text="确定" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_30"
                android:gravity="center"
                android:text="每页显示: "
                android:textSize="@dimen/dimen_50sp" />

            <Spinner
                android:id="@+id/spinnProNewPageClumns"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_100"
                android:layout_marginLeft="@dimen/dimen_30"
                android:background="@drawable/spinner_bg"
                android:entries="@array/clumnsCommon"
                android:gravity="center_vertical"
                android:text="每页10行"
                android:textSize="@dimen/dimen_50sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_30"
                android:gravity="center"
                android:text="条"
                android:textSize="@dimen/dimen_50sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>